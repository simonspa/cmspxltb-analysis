<marlin>
  <execute>
    <processor name="AIDA">
    <processor name="CONVERT">
  </execute>

  <global>
    <parameter name="LCIOInputFiles"> /scratch/hamnett/TestBeam/2013/tb-desy-december/datura/results/03-hit.slcio  </parameter>
    <parameter name="GearXMLFile" value="/scratch/hamnett/TestBeam/2012/tb-desy-december/datura/gear_desy_2012_12_datura_x0.xml"/>
    <parameter name="MaxRecordNumber" value="100000"/>
    <parameter name="SkipNEvents" value="0"/>
    <parameter name="SupressCheck" value="false"/>
    <parameter name="Verbosity" value="ALL"/>
  </global>

  <processor name="AIDA" type="AIDAProcessor">
    <!--Processor that handles AIDA files. Creates on directory per processor.
        Processors only need to create and fill the histograms, clouds and tuples.
        Needs to be the first ActiveProcessor-->

    <!-- compression of output file 0: false >0: true (default) -->
    <parameter name="Compress" type="int" value="1"/>

    <!-- filename without extension-->
    <parameter name="FileName" type="string" value="/scratch/hamnett/TestBeam/2012/tb-desy-december/datura/histo/03-track-histo"/>

    <!-- type of output file xml (default) or root ( only OpenScientist)-->
    <parameter name="FileType" type="string" value="root"/>
  </processor>
 
  <processor name="CONVERT" type="NativeReader">
    <!--Processor that converts the raw data files into lcio format-->

    <!--Parameter contains the input file for the raw data to be converted-->
    <parameter name="InputFileName" type "string"> @RunNumber@.raw </parameter>

    <!--Parameter contains the Geometry ID for comparison with the GEAR files later.
        Not sure if this is actually used or not, but it is included with a value of zero
        for now, and we will see later-->
    <parameter name="GeoID" type "int"> 0 </parameter>

    <!--Output parameter containing an LCIO Collection of TRACKERRAWDATA-->
    <parameter name="EUDRBRawModeOutputCollection" type="string" lcioOutType="TrackerRawData"> rawdata </parameter>
    
    <!--Processor Parameter which can resynchronize the events based on the TLU trigger ID-->
    <parameter name="SyncTriggerID" type="boolean"> false </parameter>

    <!--Optional Parameter that indicated the type of the sparsified pixel data structure-->
    <parameter name="EUDRBSparsePixelType" type="int"> 1 </parameter>
    
  </processor>
</marlin>
